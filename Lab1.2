        $tong = $number1 + $number2;
        $hieu = $number1 - $number2;
        $tich = $number1 * $number2;
        $thuong = $number1 / $number2;
        echo "Tổng là : " . $tong . "<br> Hiệu là : " . $hieu . "<br> Tích là : " . $tich . "<br> Thương là : " . $thuong . "<br> END";

    } else {
        echo "Nhập số hợp lệ.";
    }
}
